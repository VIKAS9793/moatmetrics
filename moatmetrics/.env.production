# MoatMetrics Production Environment Configuration
# Copy this to .env for production deployment

# Application Settings
ENVIRONMENT=production
DEBUG=false
VERSION=1.2.0-production

# Security
JWT_SECRET_KEY=moatmetrics-production-secret-key-2025-change-me-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Database (Update for production)
DATABASE_URL=sqlite:///./data/moatmetrics.db
# For PostgreSQL: postgresql://username:password@host:port/database
# For MySQL: mysql://username:password@host:port/database

# AI/ML Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=60
AI_CACHE_ENABLED=true
AI_MAX_MEMORY_GB=12

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/moatmetrics.log

# Performance
WORKERS=4
MAX_CONNECTIONS=1000
TIMEOUT=60

# Security Headers
SECURE_HEADERS=true
RATE_LIMITING=true
